{
  "version": 2,
  "builds": [
    {
      "src": "api/askGemini.js",
      "use": "@vercel/node",
      "config": { "maxDuration": 60 }
    },
    {
      "src": "*.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/askGemini",
      "dest": "/api/askGemini.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}